<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sheet">

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_icon_expand"
        android:background="@drawable/rounded_ripple_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/common_space"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/common_space"
        android:id="@+id/expand"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:id="@+id/collapseLayout"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="@dimen/side_sheet_width"
            android:layout_height="match_parent"
            android:padding="@dimen/common_space"
            android:elevation="@dimen/general_space"
            android:background="@drawable/side_sheet_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.example.ui.com.example.ui.TranslationTextView
                    style="@style/TinyTextStyle.Accent80.SemiBold"
                    app:text="translators_list_header_sub_title"
                    android:layout_marginBottom="-6dp"
                    tools:text="@string/translators_list_header_sub_title" />

                <com.example.ui.com.example.ui.TranslationTextView
                    style="@style/MediumTextStyle.Accent.Black"
                    app:text="translators_list_header_title"
                    tools:text="@string/translators_list_header_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/very_small_space"
                    android:background="@color/colorAccent" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/translatorsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/common_space"
                android:layout_marginBottom="@dimen/common_space"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/side_sheet_collapse_button_margin_end"
            android:elevation="@dimen/normal_space"
            android:src="@drawable/nav_icon_collapse"
            android:background="@drawable/rounded_ripple_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>