<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TranslationTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:supportsRtl">true</item>
        <item name="fontFamily">@font/muli_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/general_text_size</item>
    </style>

    <style name="FloatingTabItemTextStyle" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_light</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TinyTextStyle.Accent80.SemiBold" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_semibold</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:textColor">@color/colorAccent_80</item>
    </style>

    <style name="CommonTextStyle.Bold" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SmallTextStyle.Accent.SemiBold" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_semibold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SmallTextStyle.Accent.Bold" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LargeTextStyle.Accent.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="VeryLargeTextStyle.Accent50.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/very_large_text_size</item>
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGreyLight</item>
    </style>

    <style name="SmallTextStyle.Accent.Italic" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/muli_italic</item>
    </style>

    <style name="MediumTextStyle.Accent.Black" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="NormalLargeTextStyle.Accent.Black" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_black</item>
        <item name="android:textSize">@dimen/normal_large_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="VerySmallTextStyle.Accent.Light" parent="TranslationTextView">
        <item name="fontFamily">@font/muli_light</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>